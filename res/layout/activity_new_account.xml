<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/first_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/edit_first_name"
            android:text="@string/first_name" />

        <EditText
            android:id="@id/edit_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress|textCapWords" />

        <TextView
            android:id="@+id/last_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/edit_last_name"
            android:text="@string/last_name" />

        <EditText
            android:id="@id/edit_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress|textCapWords" />

        <TextView
            android:id="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/edit_email"
            android:text="@string/email" />

        <EditText
            android:id="@id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/password_one_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/edit_pass_one"
            android:text="@string/password" />

        <EditText
            android:id="@id/edit_pass_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/password_two_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/edit_pass_two"
            android:text="@string/verify_pass" />

        <EditText
            android:id="@id/edit_pass_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/gender_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender" />

        <Spinner
            android:id="@+id/gender_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/gender_spinner_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invalid_gender"
            android:textColor="@color/red" 
            android:visibility="gone" />

        <TextView
            android:id="@+id/birthday_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birthdate" />

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        
        <TextView
            android:id="@+id/date_picker_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invalid_age"
            android:textColor="@color/red" 
            android:visibility="gone" />

        <TextView
            android:id="@+id/captcha_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/captcha" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/captcha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:textSize="26sp"
                android:labelFor="@+id/captcha_answer" />

            <EditText
                android:id="@id/captcha_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:inputType="number" />
        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/register" />
        
        <ProgressBar 
            android:id="@+id/create_account_progress_bar"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:gravity="center_horizontal"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal" 
            android:indeterminate="true" 
            android:visibility="gone" />
        
    </LinearLayout>

</ScrollView>